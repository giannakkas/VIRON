# VIRON AI Router Configuration
# Copy to .env and fill in your API keys:
#   cp .env.example .env

# ── Ollama (local LLM — handles simple questions) ──
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=phi3

# ── Claude Opus (cloud — handles explanations & teaching) ──
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-opus-4-0-20250514

# ── Gemini (fallback 1) ──
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# ── ChatGPT (fallback 2) ──
OPENAI_API_KEY=
CHATGPT_MODEL=gpt-4o-mini

# ── Routing settings ──
CLOUD_TIMEOUT=60
LOCAL_TIMEOUT=30
MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
CONFIDENCE_GATE=true
