# ─── VIRON AI Router Config ──────────────────────────
# Copy this to .env and fill in your API keys

# ─── Local LLM (Ollama) ─────────────────────────────
OLLAMA_URL=http://localhost:11434
LOCAL_MODEL=phi3

# ─── Cloud API Keys ─────────────────────────────────
# Leave empty to disable a provider
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# ─── Cloud Models ───────────────────────────────────
CLAUDE_MODEL=claude-sonnet-4-20250514
CHATGPT_MODEL=gpt-4o-mini
GEMINI_MODEL=gemini-2.0-flash

# ─── Routing Strategy ──────────────────────────────
# priority | round_robin | claude | gemini | chatgpt
CLOUD_STRATEGY=priority

# ─── Confidence Gate ────────────────────────────────
CONFIDENCE_GATE=true

# ─── Cache ──────────────────────────────────────────
CACHE_ENABLED=true
CACHE_TTL_HOURS=72

# ─── Age Mode ──────────────────────────────────────
# kids (5-10) | teens (11-15) | young_adults (16-18) | adults (18+)
DEFAULT_AGE_MODE=kids

# ─── Server ────────────────────────────────────────
PORT=8000
